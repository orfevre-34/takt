{
  "name": "takt",
  "version": "0.4.0",
  "private": true,
  "description": "Desktop widget for Claude Code / Codex usage monitoring",
  "author": "tikeg",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"bun run dev:renderer\" \"bun run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "wait-on http://localhost:5173 && tsc -p tsconfig.main.json && cross-env NODE_ENV=development electron .",
    "build": "tsc -p tsconfig.main.json && vite build",
    "generate-icons": "node scripts/generate-icons.mjs",
    "package": "bun run generate-icons && bun run build && electron-builder"
  },
  "build": {
    "appId": "com.takt.app",
    "productName": "takt",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "build/tray-icon.png",
        "to": "tray-icon.png"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerSidebar": null,
      "shortcutName": "Takt"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  },
  "dependencies": {
    "koffi": "^2.15.1",
    "node-window-manager": "^2.2.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.7",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^9.1.2",
    "cross-env": "^10.1.0",
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "trustedDependencies": [
    "extract-file-icon",
    "koffi",
    "node-window-manager"
  ]
}
